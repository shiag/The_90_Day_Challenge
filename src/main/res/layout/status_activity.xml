<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".activitys.StatusActivity">

        <TextView
            android:id="@+id/days_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="25dp"
            android:paddingTop="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <com.sgmasterappsgmail.The90DayChallenge.Tools.PercentView
            android:id="@+id/custom_done"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:backgroundd="@color/done" />

        <TextView
            android:id="@+id/per_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <com.sgmasterappsgmail.The90DayChallenge.Tools.PercentView
            android:id="@+id/custom_help"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:backgroundd="@color/help" />

        <TextView
            android:id="@+id/per_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <com.sgmasterappsgmail.The90DayChallenge.Tools.PercentView
            android:id="@+id/custom_not_done"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:backgroundd="@color/notDone" />

        <TextView
            android:id="@+id/per_not_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <com.sgmasterappsgmail.The90DayChallenge.Tools.PercentView
            android:id="@+id/custom_empty"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:backgroundd="@color/dark_grey" />

        <TextView
            android:id="@+id/per_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>
</ScrollView>